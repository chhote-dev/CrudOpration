
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <div class="col-4 mx-auto">
            <h1 class="text-center">Department Page</h1>
            <form method="post">
            
                <input class="form-control" type="text" name="deptid" readonly hidden /><br />
                DeptName:
                <input class="form-control" type="text" name="deptname" required /><br />
                <input class="btn btn-primary" type="submit" value="submit" />
            </form>
        </div>
    </div>
</body>
</html>
@*show Record of each row*@
<br />

<div class="row">
    <div class="col-6 mx-auto">

<table class="table table-striped table-bordered">
        <tr>
            <th>Deptid</th>
            <th>DeptName</th>
            <th>Action</th>

        </tr>
       
            
            @foreach(var show in ViewBag.dt.Rows)
                {
                    <tr>
                       
                        <td>@show["Deptid"]</td>
                        <td>@show["DeptName"]</td>
                        <td><a class="btn btn-success"  href="/department/editrecord?id=@show["Deptid"]">Update</a>
                        <a class="btn btn-danger" href="/department/deleterecord?id=@show["Deptid"]">Delete</a></td>
                    </tr>
                //a = a + 1;
            }

      

    </table>
    </div>
</div>



